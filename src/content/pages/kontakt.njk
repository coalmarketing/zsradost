  <!-- SWIPER - DOCUMENTS FOR DOWNLOAD -->
  <section class="pb-16 ~px-4/8">
    <div class="container bg-green/15 m-auto ~p-4/10 rounded-3xl items-center gap-10 xl:gap-16">
      <div class="px-6 py-1 bg-green mb-2 rounded-full w-fit text-white font-bold">Kdo tvoří tým?</div>
      <h2 class="mb-8 text-green ~text-4xl/6xl font-bold">RADOSTný tým</h2>

      <!-- Swiper container -->
      <div class="documents-swiper-container relative mx-auto sm:w-[calc(100%-94px)]  mb-10 sm:mb-0">
        <div class="w-full swiper documents-swiper green-swiper">
          <div class="swiper-wrapper w-full h-full">
            {% from "components/team-card.njk" import teamCard %}
            {% for member in collections.team %}
              {% if member.data.published is not defined or member.data.published %}
                <div class="swiper-slide !h-auto">
                  {{ teamCard(member, { color: 'green' }) }}
                </div>
              {% endif %}
            {% endfor %}
        </div>

        <!-- Pagination -->
        <div class="swiper-pagination !relative mt-4"></div>
      </div>

      
      <div class="swiper-button-prev absolute !min-w-10 !w-10 sm:!w-10 sm:min-w-10 flex sm:block items-center justify-center !min-h-10 sm:!min-h-auto !h-10 sm:!h-auto after:!text-[24px] sm:after:!text-[40px] bg-white sm:bg-transparent rounded-full !top-[calc(100%+16px)] sm:!top-1/2 -translate-y-1/2 z-10 !text-green sm:!-left-[51px]"></div>
      <div class="swiper-button-next absolute !min-w-10 !w-10 sm:!w-10 sm:min-w-10 flex sm:block items-center justify-center !min-h-10 sm:!min-h-auto !h-10 sm:!h-auto after:!text-[24px] sm:after:!text-[40px] bg-white sm:bg-transparent rounded-full !top-[calc(100%+16px)] sm:!top-1/2 -translate-y-1/2 z-10 !text-green sm:!-right-[51px]"></div>
    </div>
  </section>

  <!-- CONTACT FORM -->
  <section class="pb-16 ~px-4/8">
    <div class="container bg-green/15 m-auto ~p-4/10 rounded-3xl grid grid-cols-1 md:grid-cols-2 gap-10 xl:gap-16">
      <div>
        <div class="px-6 py-1 bg-green mb-2 rounded-full w-fit text-white font-bold">Máte otázky?</div>
        <h2 class="mb-6 text-green ~text-4xl/6xl font-bold">Kontaktujte nás</h2>
        <p class="mb-6 text-base sm:text-lg">Váš tým ZŠ Radost</p>
      </div>
      
      <form class="flex flex-col gap-3" method="POST" name="Kontaktní formulář" action="/kontakt/success/" netlify netlify-honeypot="bot-field">
        <input type="hidden" name="form-name" value="Kontaktní formulář">
        <p class="hidden">
          <label>Don’t fill this out if you’re human:
            <input name="bot-field" />
          </label>
        </p>
        <div class="flex flex-col gap-1">
          <label for="name" class="font-bold text-lg">Jméno</label>
          <input  
            id="name"
            type="text"
            name="name"
            autocomplete="name"
            placeholder="Petr Novák"
            required class="min-h-12 rounded-full border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green focus:border-green">
        </div>

        <div class="flex flex-col gap-1">
          <label for="email" class="font-bold text-lg">Email</label>
          <input  
            id="email"
            type="email"
            name="email"
            autocomplete="email"
            placeholder="petr.novak@seznam.cz"
            required class="min-h-12 rounded-full border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green focus:border-green">
        </div>

        <div class="flex flex-col gap-1">
          <label for="subject" class="font-bold text-lg">Předmět</label>
          <input  
            id="subject"
            type="text"
            name="subject"
            autocomplete="subject"
            placeholder="Předmět zprávy"
            class="min-h-12 rounded-full border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green focus:border-green">
        </div>

        <div class="flex flex-col gap-1">
          <label for="message" class="font-bold text-lg">Zpráva</label>
          <textarea  
            id="message"
            name="message"
            autocomplete="off"
            placeholder="Napište svou zprávu"
            required 
            class="min-h-40 rounded-3xl border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green focus:border-green"
          ></textarea>
        </div>

        <button class="mt-2 group relative w-fit inline-flex items-center px-8 py-2 rounded-full font-bold text-white bg-green overflow-hidden transition-colors duration-300" type="submit">
          <span class="pointer-events-none absolute -left-10 inset-0 -skew-x-[10deg] scale-x-0 origin-left bg-white transition-transform duration-500 ease-out group-hover:scale-x-[1.2]"></span>

          <div class="relative z-10 flex items-center">
            <span class="text-xl md:text-2xl transition-colors duration-300 group-hover:text-green">
              Poslat zprávu 
            </span>
          </div>
        </button>
      </form>
    </div>
  </section>

  {% include "components/cta.njk" %}
  {% include "components/partners.njk" %}

  <!-- Swiper JS (CDN) + init script -->
  <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
  <script>
    (function(){
      if(typeof Swiper === 'undefined') return;

      new Swiper('.documents-swiper', {
        slidesPerView: 1,
        spaceBetween: 16,
        pagination: {
          el: '.swiper-pagination',
          clickable: true
        },
        navigation: {
          nextEl: '.swiper-button-next',
          prevEl: '.swiper-button-prev'
        },
        breakpoints: {
          640: { slidesPerView: 1.2 },
          768: { slidesPerView: 2 },
          1024: { slidesPerView: 3 }
        }
      });
    })();
  </script>
{% endblock body %}