{% extends "layouts/base.njk" %}

{% block body %}
  {% include "components/landing.njk" %}

  <section class="py-16 ~px-4/8">
    <div class="container bg-primary/20 m-auto ~p-4/10 rounded-3xl">
      <div class="px-6 py-1 bg-primary mb-2 rounded-full w-fit text-white font-bold">Soubory</div>
      <h1 class="mb-8 text-primary ~text-4xl/6xl font-bold">Dokumenty ke stažení</h1>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% if interest and interest.items %}
          {% for item in interest.items %}
            <article class="bg-white rounded-xl p-6 shadow-sm flex flex-col h-full">
              <h3 class="text-xl font-bold text-primary mb-2">{{ item.title }}</h3>
              <p class="text-zinc-800 mb-4 grow">{{ item.description }}</p>
              <a href="{{ item.file }}" target="_blank" class="w-fit inline-flex items-center gap-3 px-4 py-2 rounded-full bg-primary hover:bg-primary/80 text-white font-bold transition-all duration-200">
                {{ item.buttonText or 'Zobrazit' }}
              </a>
            </article>
          {% endfor %}
        {% else %}
          <p>Žádné dokumenty ke stažení.</p>
        {% endif %}
      </div>
    </div>
  </section>

{% endblock %}
