<!-- FOOTER -->
<footer>
  <div class="relative bg-white">
    <div class="z-[2] py-12 ~px-4/8 relative container m-auto flex flex-col">
      <!-- LOGO + NAVIGATION + CONTACT -->
      <div class="flex max-xl:flex-col justify-between md:items-center gap-10 xl:gap-16">
        <div class="flex flex-col items-start gap-4">
          <img
            class="h-44 w-auto"
            decoding="async"
            loading="lazy"
            src="/assets/images/Skola_Radost_logo.png"
            alt="Španělské Slunce - logo"
            width="256"
            height="80"
          />
        </div>

        <!-- NAVIGATION + CONTACT -->
        <div class="flex max-md:flex-col-reverse gap-16 md:gap-20">
          <div class="flex gap-20">
            <!-- LINKS -->
            {% set aboutLinks = [
              { text: "Vize školy", url: "/o-nas#vize" },
              { text: "Svobodná škola", url: "/o-nas#svobodna-skola" },
              { text: "RADOSTný tým", url: "/o-nas#radostny-tym" }
            ] %}

            <div class="flex flex-col gap-3">
              <span class="text-white font-bold text-2xl">O nás</span>
              <ul class="flex flex-col">
                {% for link in aboutLinks %}
                  <li class="py-0.5">
                    <a href="{{ link.url }}" class="text-zinc-300 hover:text-white transition-colors">
                      {{ link.text }}
                    </a>
                  </li>
                {% endfor %}
              </ul>
            </div>
          </div>

          <!-- NAVIGATION -->
          <div class="flex gap-20">
            <!-- LINKS -->
            {% set studentLinks = [
              { text: "Školní stravování", url: "/pro-rodice-a-zaky#stravovani" },
              { text: "Školní družina", url: "/pro-rodice-a-zaky#druzina" },
              { text: "Fotogalerie", url: "/fotogalerie" },
              { text: "Školné", url: "/pro-rodice-a-zaky#skolne" },
              { text: "Aktuality", url: "/blog" }
            ] %}

            <div class="flex flex-col gap-3">
              <span class="text-white font-bold text-2xl">Pro žáky</span>
              <ul class="flex flex-col">
                {% for link in studentLinks %}
                  <li class="py-0.5">
                    <a href="{{ link.url }}" class="text-zinc-300 hover:text-white transition-colors">
                      {{ link.text }}
                    </a>
                  </li>
                {% endfor %}
              </ul>
            </div>
          </div>


          <!-- CONTACT INFO -->
          <div class="flex flex-col gap-3">
            <span class="text-white font-bold text-2xl">Kontakty</span>

            <ul class="flex flex-col gap-2">
              <li class="group cursor-pointer">
                <!-- ICON -->
                <a
                  href="mailto:{{ client.email }}"
                  class="flex items-center gap-2 text-zinc-300 hover:text-white transition-colors hover:underline"
                >
                  <svg class="w-5 h-5 stroke-zinc-300 group-hover:stroke-white transition-colors" stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 640 512" height="200px" width="200px" xmlns="http://www.w3.org/2000/svg"><path d="M0 224v272c0 8.84 7.16 16 16 16h80V192H32c-17.67 0-32 14.33-32 32zm360-48h-24v-40c0-4.42-3.58-8-8-8h-16c-4.42 0-8 3.58-8 8v64c0 4.42 3.58 8 8 8h48c4.42 0 8-3.58 8-8v-16c0-4.42-3.58-8-8-8zm137.75-63.96l-160-106.67a32.02 32.02 0 0 0-35.5 0l-160 106.67A32.002 32.002 0 0 0 128 138.66V512h128V368c0-8.84 7.16-16 16-16h96c8.84 0 16 7.16 16 16v144h128V138.67c0-10.7-5.35-20.7-14.25-26.63zM320 256c-44.18 0-80-35.82-80-80s35.82-80 80-80 80 35.82 80 80-35.82 80-80 80zm288-64h-64v320h80c8.84 0 16-7.16 16-16V224c0-17.67-14.33-32-32-32z"></path></svg>

                  <span>Základní škola Radost, z.s.</span>
                </a>
              </li>

              <li class="group cursor-pointer">
                <!-- ICON -->
                <a
                  href="mailto:{{ client.email }}"
                  class="flex items-center gap-2 text-zinc-300 hover:text-white transition-colors hover:underline"
                >
                  <svg class="w-5 h-5 stroke-zinc-300 group-hover:stroke-white transition-colors" stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 512 512" height="200px" width="200px" xmlns="http://www.w3.org/2000/svg"><path d="M424 80H88a56.06 56.06 0 0 0-56 56v240a56.06 56.06 0 0 0 56 56h336a56.06 56.06 0 0 0 56-56V136a56.06 56.06 0 0 0-56-56zm-14.18 92.63-144 112a16 16 0 0 1-19.64 0l-144-112a16 16 0 1 1 19.64-25.26L256 251.73l134.18-104.36a16 16 0 0 1 19.64 25.26z"></path></svg>

                  <span>{{ client.email }}</span>
                </a>
              </li>

              <li class="group cursor-pointer">
                <!-- ICON -->
                <a
                  href="tel:{{ client.phoneForTel }}"
                  class="flex items-center gap-2 text-zinc-300 hover:text-white transition-colors hover:underline"
                >

                  <svg class="w-5 h-5 stroke-zinc-300 group-hover:stroke-white transition-colors" stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 512 512" height="200px" width="200px" xmlns="http://www.w3.org/2000/svg"><path d="M164.9 24.6c-7.7-18.6-28-28.5-47.4-23.2l-88 24C12.1 30.2 0 46 0 64C0 311.4 200.6 512 448 512c18 0 33.8-12.1 38.6-29.5l24-88c5.3-19.4-4.6-39.7-23.2-47.4l-96-40c-16.3-6.8-35.2-2.1-46.3 11.6L304.7 368C234.3 334.7 177.3 277.7 144 207.3L193.3 167c13.7-11.2 18.4-30 11.6-46.3l-40-96z"></path></svg>

                  <span>{{ client.phoneFormatted }}</span>
                </a>
              </li>

              <li class="group cursor-pointer">
                <!-- ICON -->
                <a
                  href="/kontakt"
                  class="flex items-center gap-2 text-zinc-300 hover:text-white transition-colors hover:underline"
                >
                  <svg class="w-5 h-5 stroke-zinc-300 group-hover:stroke-white transition-colors" stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 512 512" height="200px" width="200px" xmlns="http://www.w3.org/2000/svg"><path d="M428 224H288a48 48 0 0 1-48-48V36a4 4 0 0 0-4-4h-92a64 64 0 0 0-64 64v320a64 64 0 0 0 64 64h224a64 64 0 0 0 64-64V228a4 4 0 0 0-4-4zm-92 160H176a16 16 0 0 1 0-32h160a16 16 0 0 1 0 32zm0-80H176a16 16 0 0 1 0-32h160a16 16 0 0 1 0 32z"></path><path d="M419.22 188.59 275.41 44.78a2 2 0 0 0-3.41 1.41V176a16 16 0 0 0 16 16h129.81a2 2 0 0 0 1.41-3.41z"></path></svg>

                  <span>Fakturační údaje</span>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- BACKGROUND -->
    <picture class="before:absolute before:top-0 before:left-0 before:h-full before:w-full before:z-[1] before:bg-black/50">
      <source media="(max-width: 600px)" srcset="{% getUrl "/assets/images/hero/hero_background_image.jpg" | resize({ width: 1920, height: 800 }) | webp({ quality: 70 }) %}" type="image/webp">
      <source media="(min-width: 601px)" srcset="{% getUrl "/assets/images/hero/hero_background_image.jpg" | resize({ width: 1920, height: 800 }) | webp({ quality: 70 }) %}" type="image/webp">
      <img
          class="absolute inset-0 h-full w-full object-cover z-0"
          src="{% getUrl "/assets/images/hero/hero_background_image.jpg" | resize({ width: 1920, height: 800 }) | jpeg({ quality: 70 }) %}"
          alt="Tmavé pozadí"
          decoding="async"
          loading="eager"
          width="1920"
          height="800"
          draggable="false"/>
    </picture>

    <div class="absolute inset-0 linear-gradient z-0 opacity-80"></div>
  </div>

  <div class="flex bg-white justify-center items-center gap-4 py-2">
    <!-- CREDITS -->
    <div
      class="flex items-center gap-1 text-center text-sm text-zinc-600font-medium"
    >
      <span>Created with </span>

      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="33"
        height="33"
        viewBox="0 0 33 33"
        class="w-5 h-5"
        fill="none"
      >
        <path
          d="M16.5 29.3563L14.5063 27.5413C7.425 21.12 2.75 16.8713 2.75 11.6875C2.75 7.43875 6.0775 4.125 10.3125 4.125C12.705 4.125 15.0013 5.23875 16.5 6.985C17.9987 5.23875 20.295 4.125 22.6875 4.125C26.9225 4.125 30.25 7.43875 30.25 11.6875C30.25 16.8713 25.575 21.12 18.4937 27.5413L16.5 29.3563Z"
          fill="#F75A5A"
        />
      </svg>

      <span
        >by&nbsp;
        <a
          class="underline hover:text-primary transition-colors"
          href="https://www.coalmarketing.cz"
          target="_blank"
          >coalmarketing.cz</a
        >
        | © {% year %}</span
      >
    </div>
  </div>
</footer>
