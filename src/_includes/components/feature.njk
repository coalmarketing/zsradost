{% macro feature(opts, caller) %}
  {%- set color = (opts.color or 'primary') -%}
  {%- set containerBg = (opts.containerBg or '') -%}
  {%- set paddingTop = (opts.paddingTop or '') -%}
  {%- set topper = (opts.topper or '') -%}
  {%- set title = (opts.title or '') -%}
  {%- set image = (opts.image or '') -%}
  {%- set imageAlt = (opts.imageAlt or '') -%}
  {%- set href = (opts.href or '#') -%}
  {%- set buttonText = (opts.buttonText or 'Zjisti v√≠ce') -%}
  {%- set reverse = (opts.reverse or false) -%}
  {%- if opts.showBtn is defined -%}
    {%- set showBtn = opts.showBtn -%}
  {%- else -%}
    {%- set showBtn = true -%}
  {%- endif -%}
  {%- if opts.id is defined -%}
    {%- set sectionId = opts.id -%}
  {%- else -%}
    {%- set sectionId = '' -%}
  {%- endif -%}
  
  <section {% if sectionId %}id="{{ sectionId }}"{% endif %} class="pb-16 {{ paddingTop }} ~px-4/8">
    <div class="container {{ containerBg }} m-auto ~p-6/10 rounded-3xl grid grid-cols-1 lg:grid-cols-2 items-center gap-10 xl:gap-16">
      {# Text block #}
      {% if not reverse %}
        <div class="order-2 lg:order-1 flex flex-col justify-center">
          {% if topper %}
            <div class="px-6 py-1 {{ 'bg-' ~ color }} mb-2 rounded-full w-fit text-white font-bold">{{ topper }}</div>
          {% endif %}

          {% if title %}
            <h2 class="{{ 'mb-8 text-' ~ color ~ ' ~text-5xl/6xl font-bold' }}">{{ title }}</h2>
          {% endif %}

          <div class="mb-8 flex flex-col gap-3 text-zinc-900 text-lg md:text-xl">
            {{ caller() }}
          </div>

          {% if showBtn %}
          <a href="{{ href }}" class="group relative w-fit inline-flex items-center px-8 py-2 md:px-12 md:py-4 rounded-full font-bold text-white {{ 'bg-' ~ color }} overflow-hidden transition-colors duration-300">
            <span class="pointer-events-none absolute -left-10 inset-0 -skew-x-[10deg] scale-x-0 origin-left bg-white transition-transform duration-500 ease-out group-hover:scale-x-[1.2]"></span>

            <div class="relative z-10 flex items-center">
              <span class="text-xl md:text-2xl pr-2 transition-colors duration-300 {{ 'group-hover:text-' ~ color }}">
                {{ buttonText }}
              </span>

              <svg class="fill-white transition-all duration-300 group-hover:translate-x-1 {{ 'group-hover:fill-' ~ color }}" xmlns="http://www.w3.org/2000/svg" height="24" width="24" viewBox="0 -960 960 960" fill="currentColor">
                <path d="M504-480 320-664l56-56 240 240-240 240-56-56 184-184Z"/>
              </svg>
            </div>
          </a>
          {% endif %}
        </div>

        <picture class="order-1 lg:order-2">
          {% if image %}
            <source media="(max-width: 600px)" srcset="{% getUrl image | resize({ width: 1136, height: 746 }) | webp({ quality: 70 }) %}" type="image/webp">
            <source media="(min-width: 601px)" srcset="{% getUrl image | resize({ width: 1536, height: 1008 }) | webp({ quality: 70 }) %}" type="image/webp">
            <img class="w-full max-w-3xl rounded-xl object-cover" src="{% getUrl image | resize({ width: 1536, height: 1008 }) | jpeg({ quality: 70 }) %}" alt="{{ imageAlt }}" decoding="async" loading="lazy" draggable="false"/>
          {% endif %}
        </picture>

      {% else %}
        {# Reverse: image first, text second #}
        <picture class="order-1 lg:order-1">
          {% if image %}
            <source media="(max-width: 600px)" srcset="{% getUrl image | resize({ width: 1136, height: 746 }) | webp({ quality: 70 }) %}" type="image/webp">
            <source media="(min-width: 601px)" srcset="{% getUrl image | resize({ width: 1536, height: 1008 }) | webp({ quality: 70 }) %}" type="image/webp">
            <img class="w-full max-w-3xl rounded-xl object-cover" src="{% getUrl image | resize({ width: 1536, height: 1008 }) | jpeg({ quality: 70 }) %}" alt="{{ imageAlt }}" decoding="async" loading="lazy" draggable="false"/>
          {% endif %}
        </picture>

        <div class="flex flex-col justify-center order-2">
          {% if topper %}
            <div class="px-6 py-1 {{ 'bg-' ~ color }} mb-2 rounded-full w-fit text-white font-bold">{{ topper }}</div>
          {% endif %}

          {% if title %}
            <h2 class="{{ 'mb-8 text-' ~ color ~ ' ~text-5xl/6xl font-bold' }}">{{ title }}</h2>
          {% endif %}

          <div class="mb-8 flex flex-col gap-3 text-zinc-900 text-lg md:text-xl">
            {{ caller() }}
          </div>

          {% if showBtn %}
          <a href="{{ href }}" class="group relative w-fit inline-flex items-center px-8 py-2 md:px-12 md:py-4 rounded-full font-bold text-white {{ 'bg-' ~ color }} overflow-hidden transition-colors duration-300">
            <span class="pointer-events-none absolute -left-10 inset-0 -skew-x-[10deg] scale-x-0 origin-left bg-white transition-transform duration-500 ease-out group-hover:scale-x-[1.2]"></span>

            <div class="relative z-10 flex items-center">
              <span class="text-xl md:text-2xl pr-2 transition-colors duration-300 {{ 'group-hover:text-' ~ color }}">
                {{ buttonText }}
              </span>

              <svg class="fill-white transition-all duration-300 group-hover:translate-x-1 {{ 'group-hover:fill-' ~ color }}" xmlns="http://www.w3.org/2000/svg" height="24" width="24" viewBox="0 -960 960 960" fill="currentColor">
                <path d="M504-480 320-664l56-56 240 240-240 240-56-56 184-184Z"/>
              </svg>
            </div>
          </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </section>
{% endmacro %}
