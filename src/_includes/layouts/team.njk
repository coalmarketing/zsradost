{% extends "layouts/base.njk" %}

{% block head %}
  <title>{{ name }} | {{ role }}</title>
{% endblock %}

{% block body %}
  <!-- Swiper CSS (CDN) -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css">

  <section class="pt-56 pb-16 ~px-4/8">
    <div class="container bg-green/15 m-auto ~p-4/10 rounded-3xl grid lg:grid-cols-[1.5fr_1fr] items-center gap-10 xl:gap-16">
      <div class="w-full order-2 lg:order-2">
        <div class="px-6 py-1 bg-green mb-2 rounded-full w-fit text-white font-bold">Kdo jsem?</div>
        <h2 class="mb-8 text-green ~text-4xl/6xl font-bold">{{ name }}</h2>
        <div class="prose prose-zinc max-w-full marker:text-zinc-900">
          {{ content | safe }}
        </div>
      </div>

      <!-- IMAGE -->
      <picture class="order-1 lg:order-2">
        <source media="(max-width: 600px)" srcset="{% getUrl image | resize({ width: 373, height: 497 }) | webp({ quality: 70 }) %}" type="image/webp">
        <source media="(min-width: 601px)" srcset="{% getUrl image | resize({ width: 373, height: 497 }) | webp({ quality: 70 }) %}" type="image/webp">
        <img
          class="w-full sm:w-3/4 lg:w-full h-auto rounded-xl object-cover transition-transform duration-500 group-hover:scale-110"
          src="{% getUrl image | resize({ width: 373, height: 497 }) | webp({ quality: 70 }) %}"
          alt="{{ member.data.imageAlt or member.data.name }}"
          decoding="async"
          loading="lazy"
          draggable="false"
        />
      </picture>
    </div>
  </section>


  <!-- SWIPER - TEAM -->
  <section class="pb-16 ~px-4/8">
    <div class="container bg-green/15 m-auto ~p-4/10 rounded-3xl items-center gap-10 xl:gap-16">
      <div class="px-6 py-1 bg-green mb-2 rounded-full w-fit text-white font-bold">Kdo tvoří tým?</div>
      <h2 class="mb-8 text-green ~text-4xl/6xl font-bold">RADOSTný tým</h2>

      <!-- Swiper container -->
      <div class="documents-swiper-container relative mx-auto sm:w-[calc(100%-94px)] mb-10 sm:mb-0">
        <div class="w-full swiper documents-swiper green-swiper">
          <div class="swiper-wrapper w-full h-full">
            {% from "components/team-card.njk" import teamCard %}
            {% for member in collections.team %}
              {% if member.data.published is not defined or member.data.published %}
                <div class="swiper-slide !h-auto {% if name == member.data.name %}!hidden{% endif %}">
                  {{ teamCard(member, { color: 'green', btnText: 'Více o mně' }) }}
                </div>
              {% endif %}
            {% endfor %}
          </div>

          <!-- Pagination -->
          <div class="swiper-pagination !relative mt-4"></div>
      </div>

      <div class="swiper-button-prev absolute !min-w-10 !w-10 sm:!w-10 sm:min-w-10 flex sm:block items-center justify-center !min-h-10 sm:!min-h-auto !h-10 sm:!h-auto after:!text-[24px] sm:after:!text-[40px] bg-white sm:bg-transparent rounded-full !top-[calc(100%+16px)] sm:!top-1/2 -translate-y-1/2 z-10 !text-green sm:!-left-[51px]"></div>
      <div class="swiper-button-next absolute !min-w-10 !w-10 sm:!w-10 sm:min-w-10 flex sm:block items-center justify-center !min-h-10 sm:!min-h-auto !h-10 sm:!h-auto after:!text-[24px] sm:after:!text-[40px] bg-white sm:bg-transparent rounded-full !top-[calc(100%+16px)] sm:!top-1/2 -translate-y-1/2 z-10 !text-green sm:!-right-[51px]"></div>
    </div>
  </section>


  {% include "components/cta.njk" %}
  {% include "components/partners.njk" %}


  <!-- Swiper JS (CDN) + init script -->
  <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
  <script>
    (function(){
      if(typeof Swiper === 'undefined') return;

      new Swiper('.documents-swiper', {
        slidesPerView: 1,
        spaceBetween: 16,
        pagination: {
          el: '.swiper-pagination',
          clickable: true
        },
        navigation: {
          nextEl: '.swiper-button-next',
          prevEl: '.swiper-button-prev'
        },
        breakpoints: {
          640: { slidesPerView: 1.2 },
          768: { slidesPerView: 2 },
          1024: { slidesPerView: 3 }
        }
      });
    })();
  </script>
{% endblock %}
